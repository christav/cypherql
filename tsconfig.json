{
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": ".",
    "lib": [ "ES2022" ],
    "target": "ES2022",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "ts-node": {
    "experimentalResolver": true
  }
}
